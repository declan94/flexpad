#!/usr/bin/env bash

chown flexpad -R /opt/flexpad
chmod +x /etc/init.d/flexpad
systemctl daemon-reload

# Start the services!
service flexpad start
echo "Give flexpad several minutes to install dependencies, then visit http://localhost:8081 in your web browser"
echo "Log file is at /var/log/flexpad/flexpad.log"
echo "Add users in /opt/flexpad/app_settings.json"
echo "To stop flexpad type 'service flexpad stop', To restart type 'service flexpad restart'".
rm -f /tmp/flexpad.log /tmp/flexpad.err
